<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp">


    <ImageView
        android:id="@+id/top_notification_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/flighticons" />

    <TextView
        android:id="@+id/flightMatesTopNotificationView"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/top_notification_iv"
        android:text="You have 4 mates in Flight pk240" />

    <Button
        android:id="@+id/viewMatesTopNotificationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Mates"
        android:layout_below="@+id/flightMatesTopNotificationView"
        android:layout_alignStart="@+id/flightMatesTopNotificationView"
        android:layout_marginStart="32dp" />
</RelativeLayout>